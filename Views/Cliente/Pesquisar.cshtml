@model IEnumerable<GEPV.Domain.Entities.Cliente>

@{
    ViewBag.Title = "Pesquisar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Regiao.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RazaoSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Regiao.Descricao)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Ver Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" })
                @if (ViewBag.EhAdmin)
                        @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
}

    </tbody>

</table>
