@model GEPV.Domain.Entities.Feriado

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="min-width: 60vw">
    <h3 class="display-5 text-primary">Feriado</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label col-2" })
            <div class="col-12">
                @Html.DropDownListFor(x => x.Tipo, new List<SelectListItem>
            {
            new SelectListItem { Text = "Indefinido", Value="0" },
            new SelectListItem { Text = "Nacional", Value="1" },
            new SelectListItem { Text = "Estadual", Value="2" },
            new SelectListItem { Text = "Municipal", Value="3" }
            }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
            </div>
        </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-2" })
        <div class="col-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-2" })
        <div class="col-10">
            @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label col-2" })
        <div class="col-4">
              @Html.TextBoxFor(model => model.Data, new { @class="diames form-control", @placeholder="dd/mm" })
            @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
        </div>
    </div>



        <div class="form-group" id="form-group-uf">
        @Html.LabelFor(model => model.Uf, htmlAttributes: new { @class = "control-label col-2" })
        <div class="col-4">
                @Html.DropDownList("Uf", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Uf, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group" id="form-group-municipio">
        @Html.LabelFor(model => model.Municipio, htmlAttributes: new { @class = "control-label col-2 date" })
        <div class="col-4">
            @Html.EditorFor(model => model.Municipio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Municipio, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-success my-3" />
            @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-info" })
        </div>
    </div>
</div>
}
