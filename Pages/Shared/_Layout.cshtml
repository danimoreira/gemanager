<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - gerep_core</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/gerep_core.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)


    @if (Url.Action() == "/Regiao/Todas")
    {
        <script src="~/Scripts/openlayers/ol.js"></script>
        <script src="~/Scripts/openlayers/regioes.js"></script>
    }

    @if (Url.Action().Contains("/Regiao/Edit") || Url.Action().Contains("/Regiao/Create"))
    {
        <script src="~/Scripts/openlayers/ol.js"></script>
        <script src="~/Scripts/openlayers/regiao.js"></script>
    }

    <script src="~/Scripts/DataTables/datatables.min.js" charset="utf-8"></script>

</body>
</html>